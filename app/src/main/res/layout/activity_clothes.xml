<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my.simida.ClothesActivity">

    <FrameLayout
        android:id="@+id/framelayout_clothes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearlayout_clothes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/textview_counsel_clothes"
            android:layout_weight="1.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_btn_counsel"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:drawableTop="@mipmap/item_btn_counsel"/>

        <TextView
            android:id="@+id/textview_brand_clothes"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_btn_brand"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:drawableTop="@mipmap/item_btn_brand"/>

        <Button
            android:visibility="visible"
            android:id="@+id/btn_joincart_clothes"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:text="@string/item_btn_joincart"
            android:textColor="@color/colorAccent"/>

        <Button
            android:visibility="visible"
            android:id="@+id/btn_buy_clothes"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:text="@string/item_btn_buy"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>
