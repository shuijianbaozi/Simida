<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_type_linlay_w"
    android:layout_height="@dimen/item_type_linlay_h"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/recy_accessory_img"
        android:layout_width="@dimen/item_type_linlay_w"
        android:layout_height="@dimen/item_type_linlay_w"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/recy_accessory_text"
        android:layout_width="@dimen/item_type_linlay_w"
        android:layout_height="@dimen/item_type_text_h"
        android:text="@string/Type_item_g" />
</LinearLayout>