<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_prof_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StyleWish" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/find_catename"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/admit"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/styletalk_ic_time" />

                <TextView
                    android:id="@+id/regdt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="@string/find_item_1" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/find_bigpicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/brandmain_btn_box_following" />

            <TextView
                android:id="@+id/find_constant_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/item_find_view"
                    android:layout_height="@dimen/item_find_view"
                    android:layout_gravity="center"
                    android:src="@mipmap/styletalk_ic_view" />

                <TextView
                    android:id="@+id/find_viewText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"

                    android:gravity="center"
                    android:text="123" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <ImageView
                    android:layout_width="@dimen/item_find_view"
                    android:layout_height="@dimen/item_find_view"
                    android:layout_gravity="center"
                    android:src="@mipmap/styletalk_ic_like" />

                <TextView
                    android:id="@+id/find_likeText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"

                    android:gravity="center"
                    android:text="123" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <ImageView
                    android:layout_width="@dimen/item_find_view"
                    android:layout_height="@dimen/item_find_view"
                    android:layout_gravity="center"
                    android:src="@mipmap/styletalk_ic_reply" />

                <TextView
                    android:id="@+id/find_replyText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="123" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F7F9" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>