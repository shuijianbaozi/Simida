<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my.simida.MainActivity">


    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <RadioGroup
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbtn_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/tab1_item"
                android:drawablePadding="-25dp"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="首页"
                android:textSize="9sp" />

            <RadioButton
                android:drawablePadding="-25dp"
                android:id="@+id/rbtn_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab2_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="品牌"
                android:textSize="9sp"/>

            <RadioButton
                android:drawablePadding="-25dp"
                android:id="@+id/rbtn_tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab3_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="发现"
                android:textSize="9sp"/>

            <RadioButton
                android:drawablePadding="-25dp"
                android:id="@+id/rbtn_tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab4_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="分类"
                android:textSize="9sp"/>

            <RadioButton
                android:drawablePadding="-25dp"
                android:id="@+id/rbtn_tab5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab5_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="我的"
                android:textSize="9sp"/>

        </RadioGroup>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
