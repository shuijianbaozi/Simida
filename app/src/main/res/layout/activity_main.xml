<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my.simida.MainActivity">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/iv_main_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/header_btn_noti" />

                <ImageView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/header_logo_smida"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_main_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/header_btn_nocart" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RadioGroup
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbtn_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/tab1_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="首页"
                android:textSize="9sp" />

            <RadioButton
                android:id="@+id/rbtn_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/tab2_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="品牌"
                android:textSize="9sp" />

            <RadioButton
                android:id="@+id/rbtn_tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/tab3_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="发现"
                android:textSize="9sp" />

            <RadioButton
                android:id="@+id/rbtn_tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/tab4_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="分类"
                android:textSize="9sp" />

            <RadioButton
                android:id="@+id/rbtn_tab5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-25dp"
                android:drawableTop="@drawable/tab5_item"
                android:gravity="center"
                android:onClick="ClickButton"
                android:text="我的"
                android:textSize="9sp" />

        </RadioGroup>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
