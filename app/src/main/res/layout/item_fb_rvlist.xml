<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:padding="2dp"
    android:background="@drawable/box_gray_border"
    android:orientation="horizontal">
    <!--左侧布局-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <!--左侧四个背景图布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--第一排图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:background="@mipmap/start_position"
                    android:id="@+id/iv_fb_rvlist_zs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:background="@mipmap/start_position"
                    android:id="@+id/iv_fb_rvlist_ys"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <!--第二排图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView

                    android:background="@mipmap/start_position"
                    android:id="@+id/iv_fb_rvlist_zx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:background="@mipmap/start_position"
                    android:id="@+id/iv_fb_rvlist_yx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
        <!--中间布局-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--中间的布局-->
            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_brand_itemsbg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="New"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/up_cnd"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:text="15"
                        android:textColor="#ff0000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="Items"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fb_rvlist_logo"
                android:layout_width="80dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginTop="-10dp"
                android:id="@+id/tv_fb_rvlist_bname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Michyeora"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="-5dp"
                android:id="@+id/tv_fb_rvlist_bdsc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="15"
                android:gravity="center"
                android:text="女装 | michyeora 韩国10代人气网络品牌" />

            <TextView
                android:layout_marginTop="-10dp"
                android:id="@+id/tv_fb__rvlist_cnt"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="粉丝 :78634"
                android:textSize="13sp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_fb_rvlist"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/wrp_pink"
                android:text="关注" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>