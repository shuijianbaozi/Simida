<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopcar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.my.simida.ui.ShopcarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_shopcar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shopcar_back"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_shopcar_buy"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/wrp_pink"
                android:gravity="center"
                android:text="购买"
                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shopcar_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
